<?xml version="1.0" encoding="utf-8"?><!--  res/drawable/rounded_edittext.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/primaryColor" />
            <gradient android:angle="-90" android:endColor="@color/secondaryColor" android:startColor="@color/primaryColor" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/primaryColor" />
            <solid android:color="@color/secondaryColor" />
        </shape>
    </item>
</selector>